@import "base.css"
@import "animation.css"
@import "slide"
@import "nib/config"
@import "nib/gradients"

/* ==========================================================================
   Mixins'n'Helpers
   ==========================================================================
*/
main_bg			= #f8f8f8
body_text		= #2d2f32
dark_gray		= #121518
blue			= #009ee0
gray_navbar		= #999

.hide-text 
  text-indent 100%
  white-space nowrap
  overflow hidden

.big-font
.huge-font	
	font-weight 100
.big-font
	font-size 45px
.huge-font
	font-size 52px

/* ==========================================================================
   Main
   ==========================================================================
*/

body 
	margin 0
	font-family 'Lato', sans-serif, Arial
	font-size 24px
	font-style normal
	font-weight 300
	color #484848

a 
	text-decoration none
	&:hover
		transition color 500ms ease
/* Responsive Images */
img 
	max-width 100%
	height auto
	vertical-align middle

.island 
	background-color dark_gray

.main-navigation
	background dark_gray
	font-size 18px !important
	height 40px
	left 0
	position fixed
	text-align center
	top 0
	width 100%
	z-index 1030

	ul
		width auto
		list-style none
		margin 0 auto
		padding 0		
	li
		display inline-block
		padding 0 5px
	a 		
		color gray_navbar
		&:hover
			color white

@media screen and (min-width: 520px)

	.main-navigation 
		font-size inherit
		li 
			padding 0 15px

/* ==========================================================================
   Content
   ==========================================================================
*/

.info-box 
	border 1px solid
	border_color border_color
	background main_bg
	width 98%
	max-width 400px
	margin 0 auto 10px
	border-radius  0 10px
	box-shadow 0 0 7px rgba(0, 0, 0, 0.2)

	.info-box-header 
		background #f0f0f0
		min-height 50px
		border-bottom solid 1px border_color
		border-radius 1 10px

		h2 
			padding 7px 0 0 20px
			color dark_gray
			text-shadow 1px 1px 0 rgba(255, 255, 255, 1)

	.info-box-content 
		margin 20px
		color body_text
		.btn 
			margin-top 10px
			margin-left 10px
		

.whyus-header 
	text-align center

	h3 
		color dark_gray
		text-shadow 1px 1px 0 rgba(255, 255, 255, 1)

.whyus 
	margin 30px 0
	h4
		color dark_gray 
	p 
		padding 10px 5px

	
hr 
	width 100%
	border-top 1px solid #E2DEDE


/* ==========================================================================
   Footer
   ==========================================================================
*/

footer 
	position relative
	padding-top 30px
	background #f9f9f9 url("../img/footer-bright.jpg") center 0 no-repeat
	height 265px
	width 100%

	figure, img  
		margin 0
		position absolute	

	.footer-box 
		bottom 0
		background url("../img/footer-box.jpg") dark_gray center 0 no-repeat
		height 132px
		width 100%	

	.footer-logo 
		left 50%
		margin-left -40px
		width 81px
		height 76px
		bottom 25px	

	.paper 
		background url("../img/footer-leaf.png") center 40px transparent no-repeat
		width 406px
		height 102px
		margin-left -203px
		left 50%
		bottom 119px
		cursor pointer
		transition background-position 0.8s ease-out	

	.paper:hover 
		background-position center 0
	

	.paper-shadow 
		height 58px
		width 404px
		bottom 0	

	.footer-contact 
		width 218px
		height 58px
		bottom 10px
		margin-left 90px
		opacity 0

		transition opacity 0.6s cubic-bezier(0.470, 0.000, 0.550, 0.315)	

	.footer-contact:hover
		opacity 1

//End

/* ==========================================================================
   Home
   ==========================================================================
*/

#hero
	background url(../img/huge-bg-2.jpg) center center
	background-size cover
	width 100%
	height 400px	
	text-align center
	color #fff

	p
		animation-delay 0.4s
		animation-duration 1.2s
		color #bebebe

	h2 
		animation-delay 1s
		animation-duration 2.3s
		color cyan
		font-size 1rem
		font-weight normal
		text-transform uppercase
		
	h1
		color #fff
		padding-top 140px
		font-size 3.5rem
		text-transform uppercase

#works
	width 100%

.work
	margin 4rem 0
	min-height 588px

	// Flexbox IE9+
	display box
	display -ms-box
	display -moz-box
	display -webkit-box

	box-align center
	-ms-box-align center
	-moz-box-align center
	-webkit-box-align center

	.huge-font
		padding-bottom 2rem

	&.invertirmejor
		background url(../img/works/land-invertirmejor.png) right center no-repeat
	&.ubicar
		background url(../img/works/land-ubicar.png) left center no-repeat
    
.left-wrapper
	width 40%
	margin 0 5%
	overflow-x auto

.right-wrapper
	width 45%
	margin 0 5% 0 50%
	overflow-x auto
